<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<RelativeLayout
    android:id="@+id/startViewCon"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

     <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:background="@color/theme">

        <TextView
            android:id="@+id/mainTitile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/mainTitle"
            android:textColor="@color/white"
            android:textSize="11pt"
            android:textStyle="bold" />

        <ImageView
            style="@style/picButtonStyle"
            android:id="@+id/menu"
            android:onClick="popupmenu"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:id="@+id/divide"
        android:layout_below="@id/title"
        android:background="@color/menuLine" >
    </View>

    <fragment
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divide"
        android:name="yearsj.com.coolplayer.View.ui.fragment.MainFragment"
        />
</RelativeLayout>


        <fragment
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:id="@+id/id_fragment_playing"
            android:name="yearsj.com.coolplayer.View.ui.fragment.PlayingFragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

</FrameLayout>